---
export type Props = {
  href: string;
  text: string;
};

const { href, text } = Astro.props;

const path = Astro.url.pathname.replace(/\/$/, "");
const isActive =
  (href === "/" && path === "") ||
  (href !== "/" && path.substring(1).startsWith(href.substring(1)));
---

<a
  href={href}
  class:list={[
    {
      "font-bold": isActive,
    },
  ]}>{text}</a
>
